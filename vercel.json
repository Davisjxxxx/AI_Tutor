{
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "includeFiles": "backend/**",
        "excludeFiles": "{backend/data/**,backend/models/**,**/*.pt,**/*.pth,**/*.onnx,**/*.bin,**/*.pdf,**/*.csv,**/*.parquet,**/__pycache__/**,.venv/**}"
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "api/index.py" }
  ]
}
