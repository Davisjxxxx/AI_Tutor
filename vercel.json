{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",

  "functions": {
    "api/**/*.py": { "runtime": "python3.11", "maxDuration": 60 }
  },

  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/(.*)",        "destination": "/" }
  ]
}
